<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@drawable/round_corners_bottom"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:id="@+id/foodGridSearchRelativeLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center_vertical|right"
            android:background="@color/splash_black"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="1">

            <EditText
                android:id="@+id/foodItemSearchEditText"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@color/splash_black"
                android:hint="@string/search_label"
                android:paddingLeft="10dp"
                android:textColorHint="@color/grey400"
                android:textSize="25dp"
                android:layout_weight="1.00" />

            <ImageButton
                android:id="@+id/foodItemSearchButton"
                android:background="@color/splash_black"
                android:src="@drawable/search"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        </LinearLayout>
    </RelativeLayout>

    <GridView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menuItemGridView"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:columnWidth="150dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:layout_below="@+id/foodGridSearchRelativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>