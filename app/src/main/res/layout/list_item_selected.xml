<?xml version="1.0" encoding="utf-8"?>
<com.android.kavi.erestaurant.views.SelectedListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/splash_black"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/itemImageView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/itemImageView"
            android:id="@+id/linearLayout"
            android:layout_toLeftOf="@+id/itemPriceTextView"
            android:layout_toStartOf="@+id/itemPriceTextView">

            <TextView
                android:id="@+id/itemCodeTextView"
                android:text="#01252"
                android:textSize="20dp"
                android:textColor="@color/redPrimary"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/itemNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Item Name"
                    android:gravity="center_vertical"
                    android:textColor="@color/grey200"
                    android:textSize="22dp"/>
                <TextView
                    android:id="@+id/itemDesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Item Des"
                    android:textColor="@color/grey400"
                    android:textSize="16dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rs.100/-"
            android:id="@+id/itemPriceTextView"
            android:textColor="@color/yellow800"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/addToOrderImageView"
            android:layout_toStartOf="@+id/addToOrderImageView"
            android:layout_alignTop="@+id/addToOrderImageView"
            android:layout_alignBottom="@+id/addToOrderImageView" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/splash_black"
            android:src="@drawable/add_to_order"
            android:id="@+id/addToOrderImageView"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey200" />
</com.android.kavi.erestaurant.views.SelectedListItemView>