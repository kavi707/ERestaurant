<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey400"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/red400"
        android:id="@+id/ordersLinearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_order_btn_label"
            android:textSize="12dp"
            android:id="@+id/newOrdersBtn"
            android:textColor="@color/white"
            style="@android:style/Holo.ButtonBar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in_progress_btn_label"
            android:textSize="12dp"
            android:id="@+id/workInProgressBtn"
            android:textColor="@color/white"
            style="@android:style/Holo.ButtonBar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/completed_orders_btn_label"
            android:textSize="12dp"
            android:id="@+id/completedOrdersBtn"
            android:textColor="@color/white"
            style="@android:style/Holo.ButtonBar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/canceled_orders_btn_label"
            android:textSize="12dp"
            android:id="@+id/cancelOrdersBtn"
            android:textColor="@color/white"
            style="@android:style/Holo.ButtonBar" />
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ordersListView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ordersLinearLayout" />

</RelativeLayout>